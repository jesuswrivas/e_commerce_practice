 <div class="custom-horizontal-list d-flex flex-row flex-nowrap overflow-auto">
    <% products_array.each do |product| %>
      <div class="card-custom-main-page">
        <div class="card-custom-main-page-top">

            <%= link_to product_path(product) do %>
              <%= image_tag product.image.variant(resize_to_limit: [300, 300]), alt: "Product Image", class: "img-fluid" %>

              
            <% end %>
              
        </div>
        <div class="card-custom-main-page-bottom">
          <div class="card-custom-main-page-bottom-price">$<%=product.price%></div>
          <div class="card-custom-main-page-bottom-name"><p><%=product.name%></p></div>
        </div>
      </div>
    <% end %>
  </div>