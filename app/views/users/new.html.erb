

<div class="container-fluid mt-5 d-flex justify-content-center">

    <div class="row pb-5">
        <div class="col">
            <div class="container mb-5 text-center">
                <h1>Fill up your information</h1>
            </div>
            
            
            <div class="container border py-5 p-lg-5 shadow-sm rounded">
              <%= form_with model: @user, id: "new_user_form", local: true, data: {turbo: false } do |form| %>
                <div class="row mb-4">
                    <div class="col-12 mb-3 col-lg-6">
                        <%= form.label :name, "Name", class: "form-label d-block" %>
                        <%= form.text_field :name, class: "form-control", placeholder: "John"  %>
                        <%# Error for attribute name %>
                        <%= render partial: 'form_attribute_error', locals: { user: @user, attribute: :name } %>
                    </div>
                    <div class="col-12 col-lg-6">
                        <%= form.label :last_name, "Last Name", class: "form-label d-block" %>
                        <%= form.text_field :last_name, class: "form-control", placeholder: "Doe" %>
                        <%# Error for attribute last_name %>
                    <%= render partial: 'form_attribute_error', locals: { user: @user, attribute: :last_name } %>
                    </div>
                </div>
            
            
                <div class="row mb-4 ">
                    <div class="col-12 col-lg-5 ms-lg-5">
                        <%= form.label :email, "Email", class: "form-label d-block"  %>
                        <%= form.text_field :email, class: "form-control", placeholder: "john_doe@gmail.com"  %>
                        <%# Error for attribute email %>
                        <%= render partial: 'form_attribute_error', locals: { user: @user, attribute: :email } %>
                    </div>
                </div>
            
                <div class="row">
                    <div class="col-12 col-lg">
                        <%= form.label :password, "Password",class: "form-label d-block"   %>
                        <%= form.password_field :password, class: "form-control" %>
                        <div class="form-text">
                           Your password must be 8-20 characters long.
                        </div>
                        <%# Error for attribute password %>
                        <%= render partial: 'form_attribute_error', locals: { user: @user, attribute: :password } %>
                    </div>
                    <div class="col-12 col-lg">
                        <%= form.label :password_confirmation, "Confirm Password", class: "form-label d-block"  %>
                        <%= form.password_field :password_confirmation, class: "form-control" %>
                    </div>
                 </div>
                <% end %>
            </div>
            <%= button_tag("Create Account", type: "submit", form: 'new_user_form', class: "btn btn-primary mt-5") %>
        </div>
    </div>
        


</div>

